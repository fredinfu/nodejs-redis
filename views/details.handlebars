<h1>{{user.first_name}} {{user.last_name}} [{{user.id}}]</h1>
<ul class="list-group">
    <li class="list-group-item"><strong>Email: </strong>{{user.email}}</li>
    <li class="list-group-item"><strong>Phone: </strong>{{user.phone}}</li>
</ul>

<a href="/" class="btn btn-default pull-left">Back</a>

<form method="POST" action="/user/delete/{{user.id}}?_method=DELETE">
    <input type="submit" class="btn btn-danger pull-right" value="Delete">
</form>

<input type="button" class="btn btn-primary pull-right" value="Update" onclick="updateUser('{{user.id}}')">



<script>
    function updateUser(id) {
        var form = document.createElement("form");
              

        form.method = "GET";
        form.action = "/user/update?id="+id;   
        document.body.appendChild(form);

        form.submit();
    }
</script>